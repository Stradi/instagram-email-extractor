<UserControl x:Class="InstagramEmailExtractor.CustomControls.NumberPicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InstagramEmailExtractor.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="90">
    <Grid>
        <StackPanel Orientation="Horizontal" Background="Transparent">
            <TextBox x:Name="tb_Number" x:FieldModifier="private" Width="50" Text="0" TextAlignment="Center" VerticalContentAlignment="Center" TextChanged="tb_Number_TextChanged"/>
            <Button x:Name="btn_Up" x:FieldModifier="private" Width="20" Content="▲" Click="btn_Up_Click"/>
            <Button x:Name="btn_Down" x:FieldModifier="private" Width="20" Content="▼" Click="btn_Down_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
