<Window x:Class="InstagramEmailExtractor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InstagramEmailExtractor"
        mc:Ignorable="d"
        Title="MainWindow" Height="Auto" Width="Auto" SizeToContent="WidthAndHeight" ResizeMode="CanMinimize">
    <Grid Width="800" Height="600">
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
        </Grid>
        <TabControl Grid.Row="1">
            <TabItem Header="Credential Manager">
                <Frame Source="/CredentialManager.xaml"/>
            </TabItem>
            <TabItem Header="Extractor">
                <Frame Source="/Extractor.xaml"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
